{
  "name": "typescript-lambda-api",
  "description": "Build REST API's using Typescript & AWS Lambda. Support for decorator based routing and dependecy injection using InversifyJS. This project is built on top of the wonderful lambda-api package.",
  "version": "0.4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/djfdyuruiry/typescript-lambda-api.git"
  },
  "scripts": {
    "build": "yarn run lint && rm -rf dist && tsc",
    "build-all": "yarn run install-with-audit && yarn run build && yarn run build-tests",
    "build-tests": "rm -rf ./tests/js && tsc -p ./tests",
    "clean-install": "rm -rf node_modules && yarn install",
    "install-with-audit": "yarn install && yarn audit",
    "lint": "tslint 'src/**/*.ts'",
    "shell": "bash",
    "test": "yarn run build-all && scripts/runTests.sh"
  },
  "main": "dist/typescript-lambda-api.js",
  "typings": "dist/typescript-lambda-api.d.ts",
  "author": "Matthew Snoddy",
  "license": "MIT",
  "files": [
    "README.md",
    "LICENSE",
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 70,
    "exclude": [
      "tests/**/*"
    ]
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.19",
    "fast-json-patch": "^2.0.7",
    "inversify": "^5.0.1",
    "lambda-api": "^0.10.1",
    "marky": "^1.2.1",
    "openapi3-ts": "^1.2.0",
    "reflect-metadata": "^0.1.13",
    "sprintf-js": "^1.1.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.0",
    "@types/node": "^10.12.24",
    "@types/sprintf-js": "^1.1.2",
    "alsatian": "^2.3.0",
    "aws-sdk": "^2.404.0",
    "js-yaml": "^3.12.2",
    "junit-bark": "^1.1.1",
    "nyc": "^13.3.0",
    "tap-spec": "^5.0.0",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3"
  }
}
