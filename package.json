{
  "name": "typescript-lambda-api",
  "description": "Build REST API's using Typescript & AWS Lambda. Support for decorator based routing and dependecy injection using InversifyJS. This project is built on top of the wonderful lambda-api package.",
  "version": "0.1.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/djfdyuruiry/typescript-lambda-api.git"
  },
  "scripts": {
    "tsc": "tsc",
    "tsserver": "tsserver",
    "nodemon": "nodemon",
    "alsatian": "alsatian",
    "clean-install": "rm -rf node_modules && npm install",
    "build": "rm -rf dist && tsc",
    "build-tests": "rm -rf tests/js && tsc -p ./tests",
    "test": "npm run build && npm run build-tests && cat tests/banner.txt && alsatian ./tests/js/**/*Tests.js",
    "watch-ts": "tsc -- -w"
  },
  "files": [
    "README.md",
    "LICENSE",
    "index.d.ts",
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "main": "index.js",
  "typings": "index.d.ts",
  "author": "Matthew Snoddy",
  "license": "MIT",
  "dependencies": {
    "@types/aws-lambda": "^8.10.19",
    "@types/aws-sdk": "^2.7.0",
    "inversify": "^5.0.1",
    "lambda-api": "^0.10.1",
    "marky": "^1.2.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^10.12.24",
    "alsatian": "^2.3.0",
    "aws-sdk": "^2.404.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  }
}
